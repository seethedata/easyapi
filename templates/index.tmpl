function loadData() {

var graphview=d3.select("#graph").selectAll("div").data({{ . }});
	graphview.exit().remove();
var bar= graphview.enter()
		.append("div")
			.style("color","white")
			.style("text-align","center")
			.attr("class","col-xs-3")
			.attr("height", function(d) { return  d.Value*10 + "px";} )
			.attr("width","300px")
			.style("background-color", "steelblue")
			.text(function(d) { return d.Name; });
} 
 
function initialize() {
 loadData();
 }
</script>
